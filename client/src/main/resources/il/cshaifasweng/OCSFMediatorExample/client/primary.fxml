<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController">
    <children>
        <Label fx:id="statusLabel" text="Welcome to Tic-Tac-Toe!" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Label fx:id="playerRoleLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: blue; -fx-font-weight: bold;"/>

        <GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10">
            <Button fx:id="btn0" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button fx:id="btn1" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button fx:id="btn2" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

            <Button fx:id="btn3" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button fx:id="btn4" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="btn5" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

            <Button fx:id="btn6" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Button fx:id="btn7" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="btn8" focusTraversable="false" onAction="#handleBtnClick" prefWidth="80" prefHeight="80" style="-fx-font-size: 24px;" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>